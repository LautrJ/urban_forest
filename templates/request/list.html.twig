{% extends 'base.html.twig' %}

{% block title %}Mes demandes de recensement{% endblock %}

{% block body %}
    <div class="page-header">
        <h1>Mes demandes de recensement</h1>
        <a href="{{ path('app_request_new') }}" class="btn-new-request">+ Nouvelle demande</a>
    </div>

    {% if requests is empty %}
        <div class="no-requests">
            <svg width="64" height="64" viewBox="0 0 24 24" fill="currentColor" color="var(--forest-light)">
                <rect x="10" y="16" width="4" height="6"/>
                <path d="M12 2 L7 10 H17 Z"/>
                <path d="M12 8 L6 14 H18 Z"/>
                <path d="M12 12 L5 18 H19 Z"/>
            </svg>
            <h2>Aucune demande pour le moment</h2>
            <p>Vous n'avez pas encore soumis de demande de recensement d'arbre.</p>
            <a href="{{ path('app_request_new') }}" class="btn-new-request">Créer ma première demande</a>
        </div>
    {% else %}
        <div class="requests-grid">
            {% for request in requests %}
                <div class="request-card">
                    <div class="request-header">
                        <div>
                            <h3 style="margin: 0 0 0.5rem 0; color: var(--forest-dark);">
                                {% if request.proposedTreeType %}
                                    {{ request.proposedTreeType.commonName }}
                                {% else %}
                                    Essence à identifier
                                {% endif %}
                            </h3>
                            <span style="color: #666; font-size: 0.9rem;">
                            Demandé le {{ request.createdAt|date('d/m/Y à H:i') }}
                        </span>
                        </div>
                        <span class="request-status status-{{ request.status }}">
                        {% if request.status == 'en_attente' %}
                            En attente
                        {% elseif request.status == 'validee' %}
                            Validée
                        {% elseif request.status == 'refusee' %}
                            Refusée
                        {% endif %}
                    </span>
                    </div>

                    {% if request.description %}
                        <p style="color: #666; margin: 1rem 0;">{{ request.description }}</p>
                    {% endif %}

                    <div class="request-info">
                        {% if request.estimatedAge %}
                            <div class="info-item">
                                <span class="info-label">Âge estimé</span>
                                <span class="info-value">{{ request.estimatedAge }} ans</span>
                            </div>
                        {% endif %}

                        <div class="info-item">
                            <span class="info-label">Coordonnées GPS</span>
                            <span class="info-value">{{ request.latitude|number_format(6) }}, {{ request.longitude|number_format(6) }}</span>
                        </div>

                        <div class="info-item">
                            <span class="info-label">Rendez-vous</span>
                            <span class="info-value">
                            {% if request.needsAppointment %}
                                ✅ Demandé
                            {% else %}
                                ❌ Non nécessaire
                            {% endif %}
                        </span>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}